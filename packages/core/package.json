{
  "name": "@futhark/core",
  "version": "0.8.4",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "build:mcp": "esbuild mcp/futhark-mcp.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/mcp/futhark-mcp.js && esbuild mcp/installer.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/mcp/installer.js --external:electron",
    "build:lib": "esbuild lib/auto-updater.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/lib/auto-updater.js --external:electron --external:electron-updater",
    "build": "npm run build:mcp && npm run build:lib"
  },
  "exports": {
    "./styles/*": "./styles/*",
    "./components/*": "./components/*",
    "./hooks/*": "./hooks/*",
    "./lib/*": "./lib/*",
    "./lib/auto-updater": "./dist/lib/auto-updater.js",
    "./types": "./types/index.ts",
    "./mcp/installer": "./mcp/installer.ts",
    "./tailwind.preset": "./tailwind.preset.mjs",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "esbuild": "^0.24.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
