{
  "name": "@futhark/kenaz",
  "version": "0.21.1",
  "description": "Kenaz ᚲ — Personal Gmail client with HubSpot CRM, Google Calendar, and Claude API",
  "main": "dist/main/main/main.js",
  "bin": {
    "kenaz-mcp": "dist/mcp/mcp-server.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "electron .",
    "dev:electron": "NODE_ENV=development electron .",
    "dist": "npm run build && electron-builder --mac",
    "dist:dir": "npm run build && electron-builder --mac --dir"
  },
  "author": "Martin Stenkilde",
  "license": "UNLICENSED",
  "private": true,
  "build": {
    "appId": "com.kenaz.mail",
    "productName": "Kenaz",
    "electronVersion": "39.6.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.map",
      "!node_modules/**/*.md",
      ".env"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "branding/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "identity": "MARTIN STENKILDE (DDZS7WM362)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "../../signing/entitlements.mac.plist",
      "entitlementsInherit": "../../signing/entitlements.mac.plist",
      "forceCodeSigning": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://kenaz.app/releases/kenaz"
    },
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "asarUnpack": [],
    "npmRebuild": true,
    "dmg": {
      "title": "Kenaz",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/archiver": "^7.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^39.0.0",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.24.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@futhark/core": "*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@tiptap/extension-color": "^3.19.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-text-align": "^3.19.0",
    "@tiptap/extension-text-style": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "@types/dompurify": "^3.0.5",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.6.2",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.4",
    "electron-updater": "^6.8.3",
    "express": "^4.18.2",
    "googleapis": "^130.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turndown": "^7.1.2",
    "zod": "^3.22.0"
  }
}
