{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "build:main": { "dependsOn": ["^build"], "outputs": ["dist/main/**"] },
    "build:mcp": { "dependsOn": ["^build"], "outputs": ["dist/mcp/**"] },
    "build:renderer": { "dependsOn": ["^build"], "outputs": ["dist/renderer/**"] },
    "dist": { "dependsOn": ["^build"], "outputs": ["release/**"], "cache": false },
    "dist:dir": { "dependsOn": ["^build"], "outputs": ["release/**"], "cache": false },
    "dev": { "cache": false, "persistent": true },
    "lint": {}
  }
}
