{
  "name": "kenaz",
  "version": "0.1.0",
  "description": "Kenaz ᚲ — Personal Gmail client with HubSpot CRM, Google Calendar, and Claude API",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "electron .",
    "dev:electron": "NODE_ENV=development electron .",
    "dist": "npm run build && electron-builder --mac",
    "dist:dir": "npm run build && electron-builder --mac --dir"
  },
  "author": "Martin Stenkilde",
  "license": "UNLICENSED",
  "private": true,
  "build": {
    "appId": "com.kenaz.mail",
    "productName": "Kenaz",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.map",
      "!node_modules/**/*.md",
      ".env"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "branding/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true
    },
    "dmg": {
      "title": "Kenaz",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^26.7.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "@tiptap/core": "^2.1.16",
    "@tiptap/extension-link": "^2.1.16",
    "@tiptap/extension-placeholder": "^2.1.16",
    "@tiptap/pm": "^2.1.16",
    "@tiptap/react": "^2.1.16",
    "@tiptap/starter-kit": "^2.1.16",
    "dotenv": "^17.2.4",
    "express": "^4.18.2",
    "googleapis": "^130.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turndown": "^7.1.2"
  }
}
